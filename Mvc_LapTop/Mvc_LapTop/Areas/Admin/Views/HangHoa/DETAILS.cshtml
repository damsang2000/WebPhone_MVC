@model Mvc_LapTop.Models.HangHoa

@{
    ViewBag.Title = "DETAILS";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>DETAILS HÀNG HÓA</h2>

<table>
    <tr>
        <th style="width: 350px"></th>
        <th style="width: 200px"></th>
        <th></th>
    </tr>
    <tr>
        <td rowspan="5">
            <img src="~/Areas/Admin/SanPham/@Model.AnhBia" style="width:300px;height:300px" />
        </td>
        <td>TÊN HÀNG
        </td>
        <td>@Html.DisplayFor(model => model.TenHang)</td>
    </tr>
    <tr>
        <td>MÃ LOẠI HÀNG
        </td>
        <td>@Html.DisplayFor(model => model.MaLoaiHang)</td>
    </tr>
    <tr>
        <td>SỐ LƯỢNG TỒN
        </td>
        <td>@Html.DisplayFor(model => model.SoLuongTon)</td>
    </tr>
    <tr>
        <td>MÔ TẢ
        </td>
        <td style="text-align:justify">@Html.DisplayFor(model => model.MoTa)</td>
    </tr>
    <tr>
        <td>GIÁ BÁN
        </td>
        <td style="color: red">@Html.DisplayFor(model => model.GiaBan)</td>
    </tr>
</table>
<div style="margin-top:20px">
    <a href="@Url.Action("ShowHangHoa", "HangHoa")" class="btn btn-primary">TRỞ VỀ</a>
</div>

