<div class="container" style="font: 20px; box-shadow: 0px 0px 10px #78e08f; border: 5px solid lightblue; margin-top: 100px; margin-left: 500px; width: 350px; height: 500px">
    <h1 style="color: blueviolet; margin-left: 80px">ĐĂNG NHẬP</h1>
    <table class="table" style="margin-left: 20px; background-color: azure">
        <div><img src="~/HinhAnh/Capture.PNG" style="width: 100%" /></div>
        <br />
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height: 40px">
            <td style="text-align: right">Tên đăng nhập:</td>
            <td>
                <input type="text" name="TenDN" class="form-control" />@ViewData["loi1"]</td>
        </tr>
        <tr style="height: 40px">
            <td style="text-align: right">Mật khẩu:</td>
            <td>
                <input type="password" name="matkhau" class="form-control" />@ViewData["loi2"]</td>
        </tr>
        <tr style="height: 40px">
            <td></td>
            <td colspan="2">
                <input class="btn btn-primary" type="submit" value="Đăng nhập" /></td>
        </tr>
        <tr style="height: 40px">
            <td></td>
            <td colspan="2">
                Chưa có tài khoản?
                @Html.ActionLink("Đăng ký", "DangKy", "TaiKhoan")
        </tr>
    }
    </table>
</div>
